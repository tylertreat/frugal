# This is a comment.

namespace java foo

/**@
 * This is a docstring.
 */
struct Thing {}

/** This is not a docstring. */
struct Stuff {}

// This is a service. It has the same name as a scope. And that's ok.
service Blah {
    /**@ Use this to ping the server. */
    void ping(),
    /**@ Use this to tell the sever how you feel. */
    i64 bleh(1:Thing one, 2:Stuff two) throws (1: InvalidOperation oops),
}

// This is a scope
/**@ And this is a scope docstring. */
scope Foo {
    prefix "foo.bar.{baz}.qux"

    /**@ This is an operation docstring. */
    Foo: Thing // This is an operation.
    Bar: Stuff
}

// This is a weirdly formatted scope, but it's still valid! And it has
// the same name as a service. And that's ok.
scope
                blah
{
DoStuff :   Thing}


